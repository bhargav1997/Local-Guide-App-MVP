    @{
    ViewBag.Title = "Add Review";
}

<div class="container mt-5">
    <h2 class="mb-4">Add Review</h2>

    <form action="/Review/Create" method="post">
        <input type="hidden" name="LocationId" value="@ViewData["LocationId"]" />
        <div class="form-group">
            <label for="ReviewContent">Content:</label>
            <textarea class="form-control" id="ReviewContent" name="Content" required></textarea>
        </div>
        <div class="form-group">
            <label for="Rating">Rating:</label>
            <input type="number" class="form-control" id="Rating" name="Rating" min="1" max="5" required />
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add Review</button>
    </form>
</div>
