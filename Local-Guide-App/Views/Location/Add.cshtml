 @{
    ViewBag.Title = "Add Location";
}

<div class="container mt-5">
    <h2 class="mb-4">Add Location</h2>

    <form action="/Location/Create" method="post">
        <div class="form-group">
            <label for="LocationName">Name:</label>
            <input type="text" class="form-control" id="LocationName" name="LocationName" required>
            <div class="invalid-feedback">
                Please enter the location name.
            </div>
        </div>
        <div class="form-group">
            <label for="LocationDescription">Description:</label>
            <textarea class="form-control" id="LocationDescription" name="LocationDescription" required></textarea>
        </div>
        <div class="form-group">
            <label for="Category">Category:</label>
            <input type="text" class="form-control" id="Category" name="Category" required>
            <div class="invalid-feedback">
                Please enter the category.
            </div>
        </div>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" id="Address" name="Address" required>
            <div class="invalid-feedback">
                Please enter the address.
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Add Location</button>
    </form>
</div>
